@{
    Layout = null;
    var contents = (List<ContentPage>)ViewBag.contents;
    var i = 1;
}

@if (contents.Count > 0)
{

    <div class="slide__carosel owl-carousel owl-theme">
        @foreach (var item in contents)
        {
            var image = item.DefaultImage != null && item.DefaultImage.Contains("http") ? item.DefaultImage : SessionRequest.ImageUrl + item.DefaultImage;


            var target = item.Link != null && item.Link.Contains("http") ? "_blank" : "";
            var link = (string.IsNullOrEmpty(item.Link) ? "javascript:void();" : SessionRequest.baseUrl + item.Link);
            var cursor = string.IsNullOrEmpty(item.Link) ? "cursor:default;" : "";


            <div style="background-repeat: no-repeat;background-size: cover; background-position: center center;background-image: url('@Html.Raw(image)');" class="slider__area slider--four d-flex slider__fixed--height justify-content-start align-items-center">
                <div style="margin-left: 0px;" class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="slider__activation">
                                <!-- Start Single Slide -->
                                <div class="slide">
                                    <div class="slide__inner">
                                        <div style="width:45% !important;background:#000000;opacity:0.4 !important;z-index:9998 !important;color:#ffffff !important;border-radius:5px;padding:10px;">
                                            <h1 style="font-size: 41px;z-index:9999 !important;color:#ffffff !important;">@Html.Raw(item.Name) </h1>

                                            @if (!string.IsNullOrEmpty(item.Content))
                                            {
                                                <p style="z-index:9999 !important;color: #ffffff !important; font-size:28px !important;font-weight:bold !important;">@Html.Raw(item.Content)</p>
                                            }

                                            @if (!string.IsNullOrEmpty(item.ButtonText1))
                                            {
                                                <div style="z-index:9999 !important;color:#ffffff !important;" class="slider__btn">
                                                    <a style="color:#ffffff !important;" class="dcare__btn max__height-btn hover--theme-white" href="@item.ButtonText1Link">@Html.Raw(item.ButtonText1)</a>
                                                </div>
                                            }

                                            @if (!string.IsNullOrEmpty(item.ButtonText2))
                                            {
                                                <div style="z-index:9999 !important;color:#ffffff !important;" class="slider__btn">
                                                    <a style="color:#ffffff !important;" class="dcare__btn max__height-btn hover--theme-white" href="@item.ButtonText2Link">@item.ButtonText2</a>
                                                </div>
                                            }

                                        </div>

                                    </div>
                                </div>
                                <!-- End Single Slide -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>

}