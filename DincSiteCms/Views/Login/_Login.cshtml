@{Layout = null; }
<!DOCTYPE html>

<html lang="tr">
<!-- begin::Head -->
<head>
    <script>
        var baseUrl = '';
    </script>

    <script type="text/javascript">
        var baseUrl = '';
        var layoutUrl = '@SessionRequest.layoutUrl';
    </script>

    <script>
        var KTAppOptions = { "colors": { "state": { "brand": "#366cf3", "light": "#ffffff", "dark": "#282a3c", "primary": "#5867dd", "success": "#34bfa3", "info": "#36a3f7", "warning": "#ffb822", "danger": "#fd3995" }, "base": { "label": ["#c5cbe3", "#a1a8c3", "#3d4465", "#3e4466"], "shape": ["#f0f3ff", "#d9dffa", "#afb4d4", "#646c9a"] } } };
    </script>

    <meta charset="utf-8" />

    <title>@SessionRequest.Title</title>
    <meta name="description" content="@SessionRequest.Title">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta charset="utf-8" />

    <!--begin::Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700">        <!--end::Fonts -->
    <!--begin::Page Custom Styles(used by this page) -->
    <link href="@SessionRequest.layoutUrl/assets/css/pages/login/login-2.css" rel="stylesheet" type="text/css" />
    <!--end::Page Custom Styles -->
    <!--begin::Global Theme Styles(used by all pages) -->
    <link href="@SessionRequest.layoutUrl/assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
    <link href="@SessionRequest.layoutUrl/assets/css/style.bundle.css" rel="stylesheet" type="text/css" />
    <!--end::Global Theme Styles -->
    <!--begin::Layout Skins(used by all pages) -->
    <!--end::Layout Skins -->

    <link rel="shortcut icon" href="~/content/img/logo1.svg" />

    <script src="@SessionRequest.layoutUrl/assets/plugins/global/plugins.bundle.js" type="text/javascript"></script>

    <script src="~/content/js/bootbox.min.js" type="text/javascript"></script>
    <script src="~/content/js/loadingoverlay.min.js" type="text/javascript"></script>
    <script src="~/content/js/general.js?v=@SessionRequest.version"></script>


</head>
<!-- end::Head -->
<!-- begin::Body -->
<body style="background-image: url(@SessionRequest.layoutUrl/assets/media/demos/demo4/header.jpg); background-position: center top; background-size: 100% 350px;" class="kt-page--loading-enabled kt-page--loading kt-quick-panel--right kt-demo-panel--right kt-offcanvas-panel--right kt-header--fixed kt-header--minimize-menu kt-header-mobile--fixed kt-subheader--enabled kt-subheader--transparent kt-page--loading">

    <!-- begin::Page loader -->
    <!-- end::Page Loader -->
    <!-- begin:: Page -->
    <div class="kt-grid kt-grid--ver kt-grid--root kt-page">
        <div class="kt-grid kt-grid--hor kt-grid--root kt-login kt-login--v2 kt-login--signin" id="kt_login">
            <div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" style="background-image: url(@SessionRequest.layoutUrl/assets/media/bg/bg-1.jpg);">
                <div class="kt-grid__item kt-grid__item--fluid kt-login__wrapper">
                    <div class="kt-login__container">
                        <div class="kt-login__logo">
                            <a href="#">
                                <img src="~/content/img/logo1.svg">
                            </a>
                        </div>

                        <div class="kt-login__signin">
                            <div class="kt-login__head">
                                <h3 class="kt-login__title">Giriş</h3>
                            </div>
                            <form class="kt-form" action="/base/login">
                                <div class="input-group">
                                    <input class="form-control" type="text" placeholder="Kullanıcı Adı" name="user" autocomplete="off">
                                </div>
                                <div class="input-group">
                                    <input class="form-control" type="password" placeholder="Şifre" name="pass">
                                </div>
                                <div class="row kt-login__extra">
                                    <div class="col">
                                        <label class="kt-checkbox">
                                            <input type="checkbox" name="remember"> Hatırla
                                            <span></span>
                                        </label>
                                    </div>
                                    <div class="col kt-align-right">
                                        <a href="javascript:;" id="kt_login_forgot" class="kt-link kt-login__link">Şifremi Unuttum ?</a>
                                    </div>
                                </div>
                                <div class="kt-login__actions">
                                    <button id="kt_login_signin_submit" class="btn btn-pill kt-login__btn-primary">Giriş</button>
                                </div>
                            </form>
                        </div>


                        <div class="kt-login__forgot">
                            <div class="kt-login__head">
                                <h3 class="kt-login__title">Şifremi Unuttum ?</h3>
                                <div class="kt-login__desc">Kullanıcı Adı veya Şifre Giriniz:</div>
                            </div>
                            <form class="kt-form" action="">
                                <div class="input-group">
                                    <input class="form-control" type="text" placeholder="Email" name="email" id="kt_email" autocomplete="off">
                                </div>
                                <div class="kt-login__actions">
                                    <button id="kt_login_forgot_submit" class="btn btn-pill kt-login__btn-primary">Gönder</button>&nbsp;&nbsp;
                                    <button id="kt_login_forgot_cancel" class="btn btn-pill kt-login__btn-secondary">Vazgeç</button>
                                </div>
                            </form>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>



    <script src="@SessionRequest.layoutUrl/assets/js/scripts.bundle.js" type="text/javascript"></script>

    <script src="~/content/js/login.js?v=@SessionRequest.version"></script>

</body>
<!-- end::Body -->
</html>
