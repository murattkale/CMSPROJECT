@using Entity.CMSDB
@{
    Layout = null;
    string pageTitle = "Sinif";
    string Sinif_ControlNameUrl = "Sinif";
    string FormName = "frm_" + Sinif_ControlNameUrl + "_";
    int Sinif_idUrl = Context.Request.Query["id"].ToInt();
    var Sinif_idUrl_select = Context.Request.Query["selectid"].ToStr();
    string title = Sinif_idUrl > 0 ? (pageTitle + " Düzenle") : (pageTitle + " Kaydet");

    var edit = ViewBag.edit as Sinif;
    if (edit == null)
    {
        edit = new Sinif();
    }
    else
    {
        Sinif_idUrl_select = edit.SubeId.ToStr();
    }

}

<script type="text/javascript">
        var Sinif_FormName = "@Html.Raw(FormName)";
        var Sinif_ControlNameUrl = "@Sinif_ControlNameUrl";
    var Sinif_idUrl = @Sinif_idUrl;

</script>



<style>
    .modal-dialog {
        width: 75% !important;
    }
</style>



<!-- begin:: Content -->
<div style="width:100%;" class="kt-container  kt-grid__item kt-grid__item--fluid">

    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">

            <div class="kt-portlet__head-label">

                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    @Html.Raw(title)
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <div class="kt-portlet__head-actions">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>
                </div>
            </div>
        </div>

        <div class="kt-portlet__body">
            <form name="@FormName" id="@FormName">
                <div class="form-horizontal">
                    <input type="hidden" id="Id" name="Id" value="@edit.Id" />
                    <input type="hidden" id="IsDeleted" name="IsDeleted" value="@edit.IsDeleted" />
                    <input type="hidden" id="IsStatus" name="IsStatus" value="@edit.IsStatus" />

                    <div class="form-group">
                        <label class="control-label col-md-2" for="Ad">@Html.Raw("Sinif Adı".Trans())</label>
                        <div class="col-md-10">
                            <input required id="Ad" name="Ad" placeholder="@Html.Raw("Sinif Adı".Trans())" value="@edit.Ad" class="form-control" type="text">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Şube</label>
                        <div class="col-md-10">
                            <select required class="form-control" id="dp_SubeId" name="dp_SubeId"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Tür</label>
                        <div class="col-md-10">
                            <select class="form-control" id="dp_Tur" name="dp_Tur"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Seviye</label>
                        <div class="col-md-10">
                            <select class="form-control" id="dp_Seviye" name="dp_Seviye"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Derslik</label>
                        <div class="col-md-10">
                            <select class="form-control" id="dp_DerslikId" name="dp_DerslikId"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Seans</label>
                        <div class="col-md-10">
                            <select class="form-control" id="dp_SeansId" name="dp_SeansId"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="ToplamDersSaati">@Html.Raw("Toplam Ders Saati".Trans())</label>
                        <div class="col-md-10">
                            <input required id="ToplamDersSaati" name="ToplamDersSaati" placeholder="@Html.Raw("Toplam Ders Saati".Trans())" value="@edit.ToplamDersSaati" class="form-control" type="number">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="KayitUcreti">@Html.Raw("Kayit Ucreti".Trans())</label>
                        <div class="col-md-10">
                            <input required id="KayitUcreti" name="KayitUcreti" placeholder="@Html.Raw("Kayit Ucreti".Trans())" value="@edit.KayitUcreti" class="form-control" type="number">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="EgitimSuresi">@Html.Raw("Egitim Suresi".Trans())</label>
                        <div class="col-md-10">
                            <input required id="EgitimSuresi" name="EgitimSuresi" placeholder="@Html.Raw("Egitim Suresi".Trans())" value="@edit.EgitimSuresi" class="form-control" type="number">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="Kapasite">@Html.Raw("Kapasite".Trans())</label>
                        <div class="col-md-10">
                            <input required id="Kapasite" name="Kapasite" placeholder="@Html.Raw("Kapasite".Trans())" value="@edit.Kapasite" class="form-control" type="number">
                        </div>
                    </div>




                    <div class="form-group">
                        <div class="col-md-offset-9 col-md-9">
                            <input id="btnOK" type="submit" value="@title" class="btn btn-brand btn-elevate btn-icon-sm" />
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
<!-- end:: Content -->





<script type="text/javascript">
    var Sinif_EditFunc;
    var customComment = "";
    $(function () {
        Sinif_EditFunc = {
              getSube: function () {
                        $('#dp_SubeId').addOptionAjax("/Sube/GetSelect", null, "value", "text", function () {  }, function () { }, '@edit.SubeId', '', 'Seçiniz');
            },
             getDerslik: function () {
                        $('#dp_DerslikId').addOptionAjax("/Derslik/GetSelect", null, "value", "text", function () {  }, function () { }, '@edit.DerslikId', '', 'Seçiniz');
            },
                 getSeans: function () {
                        $('#dp_SeansId').addOptionAjax("/Seans/GetSelect", null, "value", "text", function () {  }, function () { }, '@edit.SeansId', '', 'Seçiniz');
            },
            getTur: function () {
                var selectData = [];
                selectData.push({text:'TÜR 1',value:'TÜR 1'});
                selectData.push({text:'TÜR 2',value:'TÜR 2'});
                selectData.push({ text: 'TÜR 3', value: 'TÜR 3' });
                        $('#dp_Tur').addOption(selectData, "value", "text", function () {  }, function () { }, '@Html.Raw(edit.Tur)', '', 'Seçiniz');
            },
            getSeviye: function () {
                    var selectData = [];
                selectData.push({text:'SEVİYE 1',value:'SEVİYE 1'});
                selectData.push({text:'SEVİYE 2',value:'SEVİYE 2'});
                selectData.push({text:'SEVİYE 3',value:'SEVİYE 3'});
                        $('#dp_Seviye').addOption(selectData, "value", "text", function () {  }, function () { }, '@Html.Raw(edit.Seviye)', '', 'Seçiniz');
            },

            load: function () {

                Sinif_EditFunc.getTur();
                Sinif_EditFunc.getSeviye();
                Sinif_EditFunc.getDerslik();
                Sinif_EditFunc.getSube();
                Sinif_EditFunc.getSeans();


                $('#' + Sinif_FormName).submit(function (e) {
                    e.preventDefault();
                    var postModel = $.fn.toForm("#" + Sinif_FormName);
                    $.LoadingOverlay("show");

                    $.ajx(Sinif_ControlNameUrl + "/InsertOrUpdate", { postModel: postModel }, function (resultData) {
                        if (resultData.ResultType.RType != 3) {
                            Sinif_ListFunc.GetPaging();
                            $("#ajaxSub button[data-dismiss='modal']").click();
                        }
                        else {
                            alerts(resultData.ResultType.MessageList[0]);
                        }
                        $.LoadingOverlay("hide");
                    }, function () { location.reload(); });

                });
            },



        };
        Sinif_EditFunc.load();
    });


    //ayarlar();
</script>



