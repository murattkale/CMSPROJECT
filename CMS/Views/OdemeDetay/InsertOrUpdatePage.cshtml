<script type="text/javascript">
    var OdemeDetay_EditFunc;
    var customComment = "";
    $(function () {
        OdemeDetay_EditFunc = {
            getHesap: function () {
                $('#dp_HesapId').addOptionAjax("/Hesap/GetSelect", "", "value", "text", function () { }, function () { }, HesapId, '', 'Seçiniz');
            },


            load: function () {
                OdemeDetay_EditFunc.getHesap();

                var datas = [];
                datas.push({ text: 'Aynı Banka Kredi Kartı', value: 'Aynı Banka Kredi Kartı' });
                datas.push({ text: 'Farklı Banka Kredi Kartı', value: 'Farklı Banka Kredi Kartı' });
                $('#dp_KullanilanKartTuru').addOption(datas, "value", "text", function () { }, function () { }, KullanilanKartTuru, '', 'Seçiniz');


                if (odemetip == "POS") {
                    $('.pos').removeClass("d-none");
                    $('.cek').addClass("d-none");
                }
                else {
                    $('.pos').addClass("d-none");
                    $('.cek').removeClass("d-none");

                }

                $('#' + OdemeDetay_FormName).submit(function (e) {
                    e.preventDefault();
                    var postModel = $.fn.toForm("#" + OdemeDetay_FormName);
                    $.LoadingOverlay("show");

                    $.ajx(OdemeDetay_ControlNameUrl + "/InsertOrUpdate", { postModel: postModel }, function (resultData) {
                        if (resultData.ResultType.RType != 3) {
                            OdemeDetay_ListFunc.GetPaging();
                            $("#ajaxSub button[data-dismiss='modal']").click();
                        }
                        else {
                            alerts(resultData.ResultType.MessageList[0]);
                        }
                        $.LoadingOverlay("hide");
                    }, function () { location.reload(); });

                });
            },



        };
        OdemeDetay_EditFunc.load();
    });


    //ayarlar();
</script>



