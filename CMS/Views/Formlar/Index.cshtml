                                    ft = getFT(row.FormType).Name;
                                }

                                return_data.push({
                                    'Id': row.Id,
                                    'FormType': ft,
                                    'Ad': row.Ad,
                                    'Soyad': row.Soyad,
                                    'Mail': row.Mail,
