@using Entity.MuhasebeContext
@{
    Layout = null;
    string pageTitle = "Kasa";
    string Kasa_ControlNameUrl = "Kasa";
    string FormName = "frm_" + Kasa_ControlNameUrl + "_";
    int Kasa_idUrl = Context.Request.Query["id"].ToInt();
    var Kasa_idUrl_select = Context.Request.Query["selectid"].ToStr();
    string title = Kasa_idUrl > 0 ? (pageTitle + " Düzenle") : (pageTitle + " Kaydet");

    var edit = ViewBag.edit as Kasa;
    if (edit == null)
    {
        edit = new Kasa();
    }
    else
    {
        //Kasa_idUrl_select = edit.ParentId.ToStr();
    }

}

<script type="text/javascript">
        var Kasa_FormName = "@Html.Raw(FormName)";
        var Kasa_ControlNameUrl = "@Kasa_ControlNameUrl";
    var Kasa_idUrl = @Kasa_idUrl;

</script>



<style>
    .modal-dialog {
        width: 75% !important;
    }
</style>



<!-- begin:: Content -->
<div style="width:100%;" class="kt-container  kt-grid__item kt-grid__item--fluid">

    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">

            <div class="kt-portlet__head-label">

                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    @Html.Raw(title)
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <div class="kt-portlet__head-actions">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>
                </div>
            </div>
        </div>

        <div class="kt-portlet__body">
            <form name="@FormName" id="@FormName">
                <div class="form-horizontal">
                    <input type="hidden" id="Id" name="Id" value="@edit.Id" />
                    <input type="hidden" id="IsDeleted" name="IsDeleted" value="@edit.IsDeleted" />
                    <input type="hidden" id="IsStatus" name="IsStatus" value="@edit.IsStatus" />
                    <input type="hidden" id="KurumId" name="KurumId" value="1" />

                    <input type="hidden" id="GelenTotal" name="GelenTotal" value="@edit.GelenTotal" />
                    <input type="hidden" id="CekilenTotol" name="CekilenTotol" value="@edit.CekilenTotol" />
                    <input type="hidden" id="Total" name="Total" value="@edit.Total" />


                    <div class="form-group">
                        <label class="control-label col-md-2" for="Name">@Html.Raw("Kasa Adı".Trans())</label>
                        <div class="col-md-10">
                            <input required id="Name" name="Name" placeholder="@Html.Raw("Kasa Adı".Trans())" value="@edit.Ad" class="form-control" type="text">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Üst Kasa</label>
                        <div class="col-md-10">
                            <select required class="form-control" id="dp_UstKasaId" name="dp_UstKasaId"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Para Birimi</label>
                        <div class="col-md-10">
                            <select required class="form-control" id="dp_ParaBirimId" name="dp_ParaBirimId"></select>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-2">Banka</label>
                        <div class="col-md-10">
                            <select required class="form-control" id="dp_BankaId" name="dp_BankaId"></select>
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-md-offset-9 col-md-9">
                            <input id="btnOK" type="submit" value="@title" class="btn btn-brand btn-elevate btn-icon-sm" />
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
<!-- end:: Content -->





<script type="text/javascript">
    var Kasa_EditFunc;
    var customComment = "";
    $(function () {
        Kasa_EditFunc = {
            getKasa: function () {
                $('#dp_ParentId').addOptionAjax("/Kasa/GetParent", "", "Id", "Name", function () { }, function () { }, '@Kasa_idUrl_select', '', 'Seçiniz');
            }, 
            load: function () {
                Kasa_EditFunc.getKasa();


                $('#' + Kasa_FormName).submit(function (e) {
                    e.preventDefault();
                    var postModel = $.fn.toForm("#" + Kasa_FormName);
                    $.LoadingOverlay("show");

                    $.ajx(Kasa_ControlNameUrl + "/InsertOrUpdate", { postModel: postModel }, function (resultData) {
                        if (resultData.ResultType.RType != 3) {
                            Kasa_ListFunc.GetPaging();
                            $("#ajaxSub button[data-dismiss='modal']").click();
                        }
                        else {
                            alerts(resultData.ResultType.MessageList[0]);
                        }
                        $.LoadingOverlay("hide");
                    }, function () { location.reload(); });

                });
            },



        };
        Kasa_EditFunc.load();
    });


    //ayarlar();
</script>



