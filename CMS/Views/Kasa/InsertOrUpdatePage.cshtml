    {
        edit = new Kasa();
    }
    else
    {
        Kasa_idUrl_select = edit.UstKasaId.ToStr();
    }

}

<script type="text/javascript">
        var Kasa_FormName = "@Html.Raw(FormName)";
        var Kasa_ControlNameUrl = "@Kasa_ControlNameUrl";
    var Kasa_idUrl = @Kasa_idUrl;

</script>



