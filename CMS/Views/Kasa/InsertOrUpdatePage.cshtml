
@{
    Layout = null;
    string pageTitle = "Kasa";
    string Kasa_ControlNameUrl = "Kasa";
    string FormName = "frm_" + Kasa_ControlNameUrl + "_";
    int Kasa_idUrl = Context.Request.Query["id"].ToInt();
    var Kasa_idUrl_select = Context.Request.Query["selectid"].ToStr();
    string title = Kasa_idUrl > 0 ? (pageTitle + " Düzenle") : (pageTitle + " Kaydet");

    var edit = ViewBag.edit as Kasa;
