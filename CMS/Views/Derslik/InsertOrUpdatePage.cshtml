@using Entity
@{
    Layout = null;
    string pageTitle = "Derslik";
    string Derslik_ControlNameUrl = "Derslik";
    string FormName = "frm_" + Derslik_ControlNameUrl + "_";
    int Derslik_idUrl = Context.Request.Query["id"].ToInt();
    var Derslik_idUrl_select = Context.Request.Query["selectid"].ToStr();
    string title = Derslik_idUrl > 0 ? (pageTitle + " Düzenle") : (pageTitle + " Kaydet");

    var edit = ViewBag.edit as Derslik;
    if (edit == null)
    {
        edit = new Derslik();
    }
    else
    {
        //Derslik_idUrl_select = edit.KurumId.ToStr();
    }

}

<script type="text/javascript">
        var Derslik_FormName = "@Html.Raw(FormName)";
        var Derslik_ControlNameUrl = "@Derslik_ControlNameUrl";
    var Derslik_idUrl = @Derslik_idUrl;

</script>



<style>
    .modal-dialog {
        width: 75% !important;
    }
</style>



<!-- begin:: Content -->
<div style="width:100%;" class="kt-container  kt-grid__item kt-grid__item--fluid">

    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">

            <div class="kt-portlet__head-label">

                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    @Html.Raw(title)
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <div class="kt-portlet__head-actions">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>
                </div>
            </div>
        </div>

        <div class="kt-portlet__body">
            <form name="@FormName" id="@FormName">
                <div class="form-horizontal">
                    <input type="hidden" id="Id" name="Id" value="@edit.Id" />
                    <input type="hidden" id="IsDeleted" name="IsDeleted" value="@edit.IsDeleted" />
                    <input type="hidden" id="IsStatus" name="IsStatus" value="@edit.IsStatus" />




                    <div class="form-group">
                        <label class="control-label col-md-2" for="Ad">@Html.Raw("Derslik Adı".Trans())</label>
                        <div class="col-md-10">
                            <input required id="Ad" name="Ad" placeholder="@Html.Raw("Derslik Adı".Trans())" value="@edit.Ad" class="form-control" type="text">
                        </div>
                    </div>




                    <div class="form-group">
                        <div class="col-md-offset-9 col-md-9">
                            <input id="btnOK" type="submit" value="@title" class="btn btn-brand btn-elevate btn-icon-sm" />
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
<!-- end:: Content -->





<script type="text/javascript">
    var Derslik_EditFunc;
    var customComment = "";
    $(function () {
        Derslik_EditFunc = {
            load: function () {


                $('#' + Derslik_FormName).submit(function (e) {
                    e.preventDefault();
                    var postModel = $.fn.toForm("#" + Derslik_FormName);
                    $.LoadingOverlay("show");

                    $.ajx(Derslik_ControlNameUrl + "/InsertOrUpdate", { postModel: postModel }, function (resultData) {
                        if (resultData.ResultType.RType != 3) {
                            Derslik_ListFunc.GetPaging();
                            $("#ajaxSub button[data-dismiss='modal']").click();
                        }
                        else {
                            alerts(resultData.ResultType.MessageList[0]);
                        }
                        $.LoadingOverlay("hide");
                    }, function () { location.reload(); });

                });
            },



        };
        Derslik_EditFunc.load();
    });


    //ayarlar();
</script>



