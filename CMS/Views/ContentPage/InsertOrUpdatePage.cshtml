@using Entity.CMSDB
@{
    Layout = null;
    string pageTitle = "ContentPage";
    string ContentPage_ControlNameUrl = "ContentPage";
    string FormName = "frm_" + ContentPage_ControlNameUrl + "_";
    int ContentPage_idUrl = Context.Request.Query["id"].ToInt();
    var ContentPage_idUrl_select = Context.Request.Query["selectid"].ToStr();
    string title = ContentPage_idUrl > 0 ? ("İçerik " + " Düzenle") : (pageTitle + " Kaydet");

    var edit = ViewBag.edit as ContentPage;
    if (edit == null)
    {
        edit = new ContentPage();
    }
    else
    {
        ContentPage_idUrl_select = edit.ParentId.ToStr();
    }

}

<script type="text/javascript">

    var ContentPage_FormName = "@Html.Raw(FormName)";
    var ContentPage_ControlNameUrl = "@ContentPage_ControlNameUrl";
    var ContentPage_idUrl = "@ContentPage_idUrl";
    var ContentPage_idUrl_select ="@ContentPage_idUrl_select";
    var ContentPageType ="@edit.ContentPageType";

</script>



<style>
    .modal-dialog {
        width: 75% !important;
    }
</style>



<!-- begin:: Content -->
<div style="width:100%;" class="kt-container  kt-grid__item kt-grid__item--fluid">

    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">

            <div class="kt-portlet__head-label">

                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    @Html.Raw("İçerik")
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <div class="kt-portlet__head-actions">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>
                </div>
            </div>
        </div>

        <div class="kt-portlet__body">
            <form name="@FormName" id="@FormName">
                <div class="form-horizontal">
                    <input type="hidden" id="Id" name="Id" value="@edit.Id" />
                    <input type="hidden" id="IsDeleted" name="IsDeleted" value="@edit.IsDeleted" />
                    <input type="hidden" id="IsStatus" name="IsStatus" value="@edit.IsStatus" />
                    <input type="hidden" id="KurumId" name="KurumId" value="1" />
                    <input type="hidden" id="SubeId" name="SubeId" value="@edit.SubeId" />


                    <div class="form-group">
                        <label class="control-label col-md-2" for="Name">@Html.Raw("Ad".Trans())</label>
                        <div class="col-md-10">
                            <input required id="Name" name="Name" placeholder="@Html.Raw("Ad".Trans())" value="@edit.Name" class="form-control" type="text">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Üst Kategori/Sayfa</label>
                        <div class="col-md-10">
                            <select class="form-control" id="dp_ParentId" name="dp_ParentId"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Tip</label>
                        <div class="col-md-10">
                            <select required class="form-control" id="dp_ContentPageType" name="dp_ContentPageType"></select>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-2" for="Link">@Html.Raw("Link".Trans())</label>
                        <div class="col-md-10">
                            <input required id="Link" name="Link" placeholder="@Html.Raw("Link".Trans())" value="@edit.Link" class="form-control" type="text">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="MetaKeywords">@Html.Raw("MetaKeywords".Trans())</label>
                        <div class="col-md-10">
                            <input id="MetaKeywords" name="MetaKeywords" placeholder="@Html.Raw("MetaKeywords".Trans())" value="@edit.MetaKeywords" class="form-control" type="text">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="MetaDescription">@Html.Raw("MetaDescription".Trans())</label>
                        <div class="col-md-10">
                            <input id="MetaDescription" name="MetaDescription" placeholder="@Html.Raw("MetaDescription".Trans())" value="@edit.MetaDescription" class="form-control" type="text">
                        </div>
                    </div>



                    <div class="form-group row">
                        <div class="col-md-3">
                            <div class="custom-control custom-checkbox">
                                <input @Html.Raw(edit.IsHeaderMenu == true ? "checked='checked'" : "") id="IsHeaderMenu" name="IsHeaderMenu" class="custom-control-input" type="checkbox">
                                <label class="custom-control-label" for="IsHeaderMenu">@Html.Raw("IsHeaderMenu".Trans())</label>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="custom-control custom-checkbox">
                                <input @Html.Raw(edit.IsFooterMenu == true ? "checked='checked'" : "") id="IsFooterMenu" name="IsFooterMenu" class="custom-control-input" type="checkbox">
                                <label class="custom-control-label" for="IsFooterMenu">@Html.Raw("IsFooterMenu".Trans())</label>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="custom-control custom-checkbox">
                                <input @Html.Raw(edit.IsSideMenu == true ? "checked='checked'" : "") id="IsSideMenu" name="IsSideMenu" class="custom-control-input" type="checkbox">
                                <label class="custom-control-label" for="IsSideMenu">@Html.Raw("IsSideMenu".Trans())</label>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="custom-control custom-checkbox">
                                <input @Html.Raw(edit.IsHamburgerMenu == true ? "checked='checked'" : "") id="IsHamburgerMenu" name="IsHamburgerMenu" class="custom-control-input" type="checkbox">
                                <label class="custom-control-label" for="IsHamburgerMenu">@Html.Raw("IsHamburgerMenu".Trans())</label>
                            </div>
                        </div>
                    </div>




                    <div class="form-group">
                        <label class="control-label col-md-2" for="ContentShort">@Html.Raw("Kısa İçerik".Trans())</label>
                        <div class="col-md-10">
                            <input id="ContentShort" name="ContentShort" placeholder="@Html.Raw("Kısa İçerik".Trans())" value="@edit.ContentShort" class="form-control" type="text">
                        </div>
                    </div>




                    <div class="form-group row">
                        <div class="col-md-3">
                            <input for="DefaultImage" id="file_DefaultImage" type="file" value="@edit.DefaultImage">
                        </div>
                        <div class="col-md-9">
                            <input disabled="disabled" type="text" class="form-control"  name="DefaultImage" id="DefaultImage" value="@edit.DefaultImage">
                        </div>

                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-2" for="Content">@Html.Raw("İçerik".Trans())</label>
                        <div class="col-md-10">
                            <textarea id="Content" name="Content" placeholder="@Html.Raw("İçerik".Trans())" class="form-control">@Html.Raw(edit.Content)</textarea>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-2" for="BannerText">@Html.Raw("BannerImage".Trans())</label>
                        <div class="col-md-10">
                            <input id="BannerImage" name="BannerImage" placeholder="@Html.Raw("BannerImage".Trans())" value="@edit.BannerImage" class="form-control" type="text">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="BannerText">@Html.Raw("BannerText".Trans())</label>
                        <div class="col-md-10">
                            <input id="BannerText" name="BannerText" placeholder="@Html.Raw("BannerText".Trans())" value="@edit.BannerText" class="form-control" type="text">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="ButtonText1">@Html.Raw("ButtonText1".Trans())</label>
                        <div class="col-md-10">
                            <input id="ButtonText1" name="ButtonText1" placeholder="@Html.Raw("ButtonText1".Trans())" value="@edit.ButtonText1" class="form-control" type="text">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="ButtonText1Link">@Html.Raw("ButtonText1Link".Trans())</label>
                        <div class="col-md-10">
                            <input id="ButtonText1Link" name="ButtonText1Link" placeholder="@Html.Raw("ButtonText1Link".Trans())" value="@edit.ButtonText1Link" class="form-control" type="text">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="ButtonText2">@Html.Raw("ButtonText2".Trans())</label>
                        <div class="col-md-10">
                            <input id="ButtonText2" name="ButtonText2" placeholder="@Html.Raw("ButtonText2".Trans())" value="@edit.ButtonText2" class="form-control" type="text">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="ButtonText2Link">@Html.Raw("ButtonText2Link".Trans())</label>
                        <div class="col-md-10">
                            <input id="ButtonText2Link" name="ButtonText2Link" placeholder="@Html.Raw("ButtonText2Link".Trans())" value="@edit.ButtonText2Link" class="form-control" type="text">
                        </div>
                    </div>




                    <div class="form-group">
                        <div class="col-md-offset-9 col-md-9">
                            <input id="btnOK" type="submit" value="@title" class="btn btn-brand btn-elevate btn-icon-sm" />
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
<!-- end:: Content -->





<script type="text/javascript">
    var ContentPage_EditFunc;
    var customComment = "";
    $(function () {
        ContentPage_EditFunc = {
            GetParent: function () {

                $('#dp_ParentId').addOptionAjax(ContentPage_ControlNameUrl + "/GetParent", "", "value", "text", function () { }, function () { }, ContentPage_idUrl_select, '', 'Seçiniz');
            },
            load: function () {

                fileUpload('#file_DefaultImage');

                $('#' + ContentPage_FormName + ' textarea').each(function () {
                    if (CKEDITOR.instances[$(this).attr('name')])
                        CKEDITOR.instances[$(this).attr('name')].destroy();

                    CKEDITOR.replace($(this).attr('name'), {
                        //filebrowserImageUploadUrl: '/Base/FileUpload'
                    });




                });

                $('#Name').ceo({ target: '#Link' });
                $('#Name').ceo({ target: '#MetaKeywords' });
                $('#Name').dup({ target: '#MetaDescription' });

                getContentPageType('#dp_ContentPageType', ContentPageType);


                ContentPage_EditFunc.GetParent();

                $('#' + ContentPage_FormName).submit(function (e) {
                    e.preventDefault();
                    var postModel = $.fn.toForm("#" + ContentPage_FormName);
                    $.LoadingOverlay("show");

                    $.ajx(ContentPage_ControlNameUrl + "/InsertOrUpdate", { postModel: postModel }, function (resultData) {
                        if (resultData.ResultType.RType != 3) {
                            ContentPage_ListFunc.GetPaging();
                            $("#ajaxSub button[data-dismiss='modal']").click();
                        }
                        else {
                            alerts(resultData.ResultType.MessageList[0]);
                        }
                        $.LoadingOverlay("hide");
                    }, function () { location.reload(); });

                });
            },



        };
        ContentPage_EditFunc.load();
    });


    //ayarlar();
</script>



