                    e.preventDefault();
                    var postModel = $.fn.toForm("#" + Yayin_FormName);
                    $.LoadingOverlay("show");

                    $.ajx(Yayin_ControlNameUrl + "/InsertOrUpdate", { postModel: postModel }, function (resultData) {
                        if (resultData.ResultType.RType != 3) {
                            Yayin_ListFunc.GetPaging();
                            $("#ajaxSub button[data-dismiss='modal']").click();
                        }
                        else {
                            alerts(resultData.ResultType.MessageList[0]);
                        }
