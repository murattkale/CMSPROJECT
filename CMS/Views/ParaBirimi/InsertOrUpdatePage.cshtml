
@{
    Layout = null;
    string pageTitle = "ParaBirimi";
    string ParaBirimi_ControlNameUrl = "ParaBirimi";
    string FormName = "frm_" + ParaBirimi_ControlNameUrl + "_";
    int ParaBirimi_idUrl = Context.Request.Query["id"].ToInt();
    var ParaBirimi_idUrl_select = Context.Request.Query["selectid"].ToStr();
    string title = ParaBirimi_idUrl > 0 ? (pageTitle + " Düzenle") : (pageTitle + " Kaydet");

    var edit = ViewBag.edit as ParaBirimi;
    if (edit == null)
    {
        edit = new ParaBirimi();
    }
    else
    {
        //ParaBirimi_idUrl_select = edit.ParentId.ToStr();
    }

}

<script type="text/javascript">
        var ParaBirimi_FormName = "@Html.Raw(FormName)";
        var ParaBirimi_ControlNameUrl = "@ParaBirimi_ControlNameUrl";
    var ParaBirimi_idUrl = @ParaBirimi_idUrl;

</script>



<style>
    .modal-dialog {
        width: 75% !important;
    }
</style>



<!-- begin:: Content -->
<div style="width:100%;" class="kt-container  kt-grid__item kt-grid__item--fluid">

    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">

            <div class="kt-portlet__head-label">

                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    @Html.Raw(title)
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <div class="kt-portlet__head-actions">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>
                </div>
            </div>
        </div>

        <div class="kt-portlet__body">
            <form name="@FormName" id="@FormName">
                <div class="form-horizontal">
                    <input type="hidden" id="Id" name="Id" value="@edit.Id" />
                    <input type="hidden" id="IsDeleted" name="IsDeleted" value="@edit.IsDeleted" />
                    <input type="hidden" id="IsStatus" name="IsStatus" value="@edit.IsStatus" />
                    <input type="hidden" id="KurumId" name="KurumId" value="1" />


                    <div class="form-group">
                        <label class="control-label col-md-2" for="Name">@Html.Raw("Ad".Trans())</label>
                        <div class="col-md-10">
                            <input required id="Ad" name="Ad" placeholder="@Html.Raw("Ad".Trans())" value="@edit.Ad" class="form-control" type="text">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="Kod">@Html.Raw("Kod".Trans())</label>
                        <div class="col-md-10">
                            <input required id="Kod" name="Kod" placeholder="@Html.Raw("Kod".Trans())" value="@edit.Kod" class="form-control" type="text">
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-md-offset-9 col-md-9">
                            <input id="btnOK" type="submit" value="@title" class="btn btn-brand btn-elevate btn-icon-sm" />
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
<!-- end:: Content -->





<script type="text/javascript">
    var ParaBirimi_EditFunc;
    var customComment = "";
    $(function () {
        ParaBirimi_EditFunc = {
        
            load: function () {

                $('#' + ParaBirimi_FormName).submit(function (e) {
                    e.preventDefault();
                    var postModel = $.fn.toForm("#" + ParaBirimi_FormName);
                    $.LoadingOverlay("show");

                    $.ajx(ParaBirimi_ControlNameUrl + "/InsertOrUpdate", { postModel: postModel }, function (resultData) {
                        if (resultData.ResultType.RType != 3) {
                            ParaBirimi_ListFunc.GetPaging();
                            $("#ajaxSub button[data-dismiss='modal']").click();
                        }
                        else {
                            alerts(resultData.ResultType.MessageList[0]);
                        }
                        $.LoadingOverlay("hide");
                    }, function () { location.reload(); });

                });
            },



        };
        ParaBirimi_EditFunc.load();
    });


    //ayarlar();
</script>



