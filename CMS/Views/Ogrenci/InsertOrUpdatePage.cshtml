
@{
    string Ogrenci_pageTitle = "Öğrenci";
    string Ogrenci_ControlNameUrl = "Ogrenci";
    string Ogrenci_FormName = "frm_" + Ogrenci_ControlNameUrl + "_";
    int Ogrenci_idUrl = Context.Request.Query["id"].ToInt();
    var Ogrenci_idUrl_select = Context.Request.Query["selectid"].ToStr();
    string Ogrenci_title = Ogrenci_idUrl > 0 ? (Ogrenci_pageTitle + " Düzenle") : (Ogrenci_pageTitle + " Kaydet");

    var edit = ViewBag.edit as User;
    if (edit == null)
    {
        edit = new User();
    }
    else
    {
    }

}

<script type="text/javascript">
        var Ogrenci_FormName = "@Html.Raw(Ogrenci_FormName)";
        var Ogrenci_ControlNameUrl = "@Ogrenci_ControlNameUrl";
    var Ogrenci_idUrl = @Ogrenci_idUrl;

</script>



<!-- begin:: Content -->
<div style="width:100%;" class="kt-container  kt-grid__item kt-grid__item--fluid">

    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">

            <div class="kt-portlet__head-label">

                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-Ogrenci_title">
                    @Html.Raw(Ogrenci_pageTitle)
                </h3>
            </div>

        </div>

        <div class="kt-portlet__body">
            <form name="@Ogrenci_FormName" id="@Ogrenci_FormName">
                <div class="form-horizontal">

                    @Html.Raw(edit.DynamicInputHelper(new string[] { }, new string[] { "" }))



                    <div class="form-group">
                        <div class="col-md-offset-9 col-md-9">
                            <input id="btnOK" type="submit" value="@Ogrenci_title" class="btn btn-brand btn-elevate btn-icon-sm" />
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>



</div>
<!-- end:: Content -->
<script type="text/javascript">
    var Ogrenci_EditFunc;
    $(function () {
        Ogrenci_EditFunc = {


            load: function () {


                $('#' + Ogrenci_FormName).submit(function (e) {
                    e.preventDefault();
                    var postModel = $.fn.toForm("#" + Ogrenci_FormName);
                    $.LoadingOverlay("show");
                    $.ajx(Ogrenci_ControlNameUrl + "/InsertOrUpdate", { postModel: postModel }, function (resultData) {
                          $.LoadingOverlay("hide");
                        if (resultData.ResultType.RType != 3) {
                            location.href = "/OgrenciDetay/InsertOrUpdatePage?id=" + resultData.ResultRow.Id;
                        }
                        else {
                            alerts(resultData.ResultType.MessageList[0]);
                        }

                    }, function () { location.reload(); });

                });
            },



        };
        Ogrenci_EditFunc.load();
    });


    //ayarlar();
</script>






