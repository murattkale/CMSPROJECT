@using Entity
@{
    Layout = null;
    string pageTitle = "Menus";
    string Menus_ControlNameUrl = "Menus";
    string FormName = "frm_" + Menus_ControlNameUrl + "_";
    int Menus_idUrl = Context.Request.Query["id"].ToInt();
    var Menus_idUrl_select = Context.Request.Query["selectid"].ToStr();
    string title = Menus_idUrl > 0 ? (pageTitle + " Düzenle") : (pageTitle + " Kaydet");

    var edit = ViewBag.edit as Menus;
    if (edit == null)
    {
        edit = new Menus();
    }
    else
    {
        Menus_idUrl_select = edit.ParentId.ToStr();
    }

}

<script type="text/javascript">
        var Menus_FormName = "@Html.Raw(FormName)";
        var Menus_ControlNameUrl = "@Menus_ControlNameUrl";
    var Menus_idUrl = @Menus_idUrl;

</script>



<style>
    .modal-dialog {
        width: 75% !important;
    }
</style>



<!-- begin:: Content -->
<div style="width:100%;" class="kt-container  kt-grid__item kt-grid__item--fluid">

    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">

            <div class="kt-portlet__head-label">

                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    @Html.Raw(title)
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <div class="kt-portlet__head-actions">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>
                </div>
            </div>
        </div>

        <div class="kt-portlet__body">
            <form name="@FormName" id="@FormName">
                <div class="form-horizontal">
                    <input type="hidden" id="Id" name="Id" value="@edit.Id" />
                    <input type="hidden" id="IsDeleted" name="IsDeleted" value="@edit.IsDeleted" />
                    <input type="hidden" id="IsStatus" name="IsStatus" value="@edit.IsStatus" />
                    <input type="hidden" id="KurumId" name="KurumId" value="1" />


                    <div class="form-group">
                        <label class="control-label col-md-2" for="Name">@Html.Raw("Menü Adı".Trans())</label>
                        <div class="col-md-10">
                            <input required id="Name" name="Name" placeholder="@Html.Raw("Menü Adı".Trans())" value="@edit.Name" class="form-control" type="text">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="SiteCeo">@Html.Raw("Link".Trans())</label>
                        <div class="col-md-10">
                            <input id="Link" name="Link" placeholder="@Html.Raw("Link".Trans())" value="@edit.Link" class="form-control" type="text">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Üst Menü</label>
                        <div class="col-md-10">
                            <select class="form-control" id="dp_ParentId" name="dp_ParentId"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="OrderNo">@Html.Raw("Menü Sırası".Trans())</label>
                        <div class="col-md-10">
                            <input id="OrderNo" name="OrderNo" placeholder="@Html.Raw("Menü Sırası".Trans())" value="@edit.OrderNo" class="form-control" type="number">
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-2" for="Title">@Html.Raw("Menü Başlığı".Trans())</label>
                        <div class="col-md-10">
                            <input id="Title" name="Title" placeholder="@Html.Raw("Menü Başlığı".Trans())" class="form-control" type="text">
                        </div>
                    </div>





                    <div class="form-group">
                        <div class="col-md-offset-9 col-md-9">
                            <input id="btnOK" type="submit" value="@title" class="btn btn-brand btn-elevate btn-icon-sm" />
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
<!-- end:: Content -->





<script type="text/javascript">
    var Menus_EditFunc;
    var customComment = "";
    $(function () {
        Menus_EditFunc = {
            getMenus: function () {
                $('#dp_ParentId').addOptionAjax("/Menus/GetParent", "", "Id", "Name", function () { }, function () { }, '@Menus_idUrl_select', '', 'Seçiniz');
            },
            load: function () {
                Menus_EditFunc.getMenus();

                  $("#Name").ceo({ target: "#Link" });

                $('#' + Menus_FormName).submit(function (e) {
                    e.preventDefault();
                    var postModel = $.fn.toForm("#" + Menus_FormName);
                    $.LoadingOverlay("show");

                    $.ajx(Menus_ControlNameUrl + "/InsertOrUpdate", { postModel: postModel }, function (resultData) {
                        if (resultData.ResultType.RType != 3) {
                            Menus_ListFunc.GetPaging();
                            $("#ajaxSub button[data-dismiss='modal']").click();
                        }
                        else {
                            alerts(resultData.ResultType.MessageList[0]);
                        }
                        $.LoadingOverlay("hide");
                    }, function () { location.reload(); });

                });
            },



        };
        Menus_EditFunc.load();
    });


    //ayarlar();
</script>



